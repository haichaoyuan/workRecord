<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.module_appbarlayout">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity android:name="com.example.module_appbarlayout.AppbarLayoutEnterActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Theme.MyApplication"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.module_appbarlayout.MainAppBarLayoutActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Theme.MyApplication"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.example.module_appbarlayout.AppbarLayoutSimpleActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Theme.MyApplication"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.example.module_appbarlayout.HomePageRawActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Theme.MyApplication"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>